{% extends 'base_front.html.twig' %}

{% block title %}Log in!{% endblock %}

{% block body %}
    <main id="login">
        <div id="page_logs">
            <form method="post">
                <h1>Se connecter</h1>
                {% if error %}
                    <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                {% endif %}

                <label for="login">Adresse mail : </label></br>
                <input type="text" value="{{ last_username }}" name="mail" id="inputMail" class="form-control"
                       placeholder="Mail" required autofocus>
                <label for="passwd">Mot de passe : </label></br>
                <input type="password" name="password" id="inputPassword" class="form-control" placeholder="Password"
                       required>

                <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

                <p class="under">Vous ne possedez pas encore de compte ? <a href="{{ path('subscribe') }}"> Cliquez ici</a></p>
                <button class="btn-effect btn-effect-color" type="submit">
                    Valider
                </button>
            </form>
        </div>
    </main>
{% endblock %}
