{% extends 'base_front.html.twig' %}
{# templates/base.html.twig #}
{% block title %}Vincent Trainer  - S'inscrire{% endblock %}
{% block meta %}Vincent Trainer - S'inscrire{% endblock %}



{% block body %}
    <main id="subscribe">
        <div id="page_logs">
            <h1>S'inscrire</h1>
            {{ form_start(form) }}
            {{ form_row(form.mail,{'label':'Nom utilisateur','attr':{'placeholder':'Adresse email','class':'form-control'}}) }}
            {{ form_row(form.password,{'label':'Mot de passe','attr':{'placeholder':'Mot de passe','class':'form-control'}}) }}
            {{ form_row(form.confirm_password,{'label':'Confirmez votre mot de passe','attr':{'placeholder':'Répéter votre mot de passe','class':'form-control'}}) }}
            {{ form_widget(form) }}
            <p class="under">Vous possedez déjà un compte ? <a href="{{ path('app_login') }}"> Cliquez ici</a></p>
            <button type="submit" class="btn-effect btn-effect-color">Valider</button>
            {{ form_end(form) }}
        </div>
    </main>

{% endblock %}

{% block script %}

{% endblock %}